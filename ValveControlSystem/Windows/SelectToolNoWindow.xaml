<Window x:Class="ValveControlSystem.Windows.SelectToolNoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="选择工具编号" Height="193" Width="318"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="AliceBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,20,0">
            <RadioButton x:Name="rbTool1" Content="工具1" Margin="0,5" Checked="rbTool1_Checked"></RadioButton>
            <RadioButton x:Name="rbTool2" Content="工具2" Margin="0,5" Checked="rbTool2_Checked"></RadioButton>
         </StackPanel>
        <DockPanel Grid.Row="1" HorizontalAlignment="Center">
            <Button x:Name="btnEnter" Width="70" Height="26" Content="确认" IsDefault="True" Click="btnEnter_Click"></Button>
            <Button x:Name="btnCancel" Width="70" Height="26" Content="取消" Margin="30,0,0,0" Click="btnCancel_Click"></Button>
        </DockPanel>
    </Grid>
</Window>
